# Copy this file to .env and fill your values

# Django
DEBUG=1

# Discord OAuth
DISCORD_CLIENT_ID=
DISCORD_CLIENT_SECRET=
DISCORD_REDIRECT_URI=http://localhost:8000/auth/discord/callback/
DISCORD_SCOPE=identify

# Public profile config
# Your Discord user ID (Snowflake). When you login once, tokens will be stored for public display.
DISCORD_OWNER_ID=
# Guild ID with Server Widget enabled to fetch presence (online/idle/dnd)
DISCORD_WIDGET_GUILD_ID=
# About-me text to show on homepage (since Discord OAuth API does not expose bio)
DISCORD_OWNER_ABOUT=
